<?xml version='1.0' encoding='utf-8' ?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/flMain"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/d8dp"
    android:background="@android:color/transparent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_store_row" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/d8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@id/imgStore"
                android:layout_width="@dimen/d40dp"
                android:layout_height="@dimen/d40dp"
                android:src="@drawable/bg_placeholder" />

            <TextView
                android:id="@+id/textStoreName"
                android:layout_width="@dimen/d0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/d8dp"
                android:layout_marginEnd="@dimen/d4dp"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textDirection="locale" />

            <TextView
                android:id="@+id/viewOnMaps"
                android:layout_width="@dimen/d40dp"
                android:layout_height="@dimen/d40dp"
                android:layout_marginEnd="@dimen/d8dp"
                android:background="@drawable/bg_view_store"
                android:fontFamily="@font/semibold"
                android:gravity="center"
                android:text="View"
                android:textColor="@android:color/white"
                android:textSize="@dimen/scale_12sp" />

            <ImageView
                android:id="@+id/imgGetDirection"
                android:layout_width="@dimen/d40dp"
                android:layout_height="@dimen/d40dp"
                android:background="@drawable/getdireciton_arrow" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
